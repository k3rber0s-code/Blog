extends layout

block content
    h1= title

    form(method='POST' action='')
        div.form-group
            label(for='title') Title:
            input#title.form-control(type='text', placeholder='Name of post' name='title' required='true' value=(undefined===post ? '' : post.title) )
        div.form-group
            label(for='body') Recipe:
            textarea#body.form-control(type='textarea', placeholder='Recipe summary' name='body' required='true') #{undefined===post ? '' : post.body}
        div.form-group
            label(for='tag') Tag:
            div
                each tag in tags
                    div(style='display: inline; padding-right:10px;')
                        input.checkbox-input(type='checkbox', name='tag', id=tag._id, value=tag._id, checked=tag.checked)
                        label(for=tag._id) #{tag.name}
        button.button-6(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
