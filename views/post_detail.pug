extends layout

block content
    div.container
        h1.post_detail=title
        p
            strong Tags:
            each val, index in tags
                span.category
                    a(href=(val.url)) ##{val.name}
                if index < tags.length - 1
                    |
        div.post_detail_body !{body}
        if isAuthenticated
            hr
            p
                a(href=post_url + '/delete') Delete Post
            p
                a(href=post_url + '/update') Update Post